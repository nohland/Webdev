<% @items.order(:due_date).each do |item| %>
<p>
<li>

<%=item.description%> - <%=item.due_date%> 

</li>
  <form action = '/delete/<%=item.id%>' method='post'> 

     <input type = 'submit' value='Delete' >

  </form> 





</p>

<%end%>
